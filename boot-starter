#!/bin/bash

# shellcheck source=boot-starter.conf

if [ -f ./boot-starter.conf ]; then
    source boot-starter.conf
else
    echo '未找到 boot-starter.conf'
    exit 1
fi

# 打印红色字
printRed() {
    echo -ne "\e[31m$*\e[0m"
}
# 打印绿色字
printGreen() {
    echo -ne "\e[32m$*\e[0m"
}
# 打印黄色字
printYellow() {
    echo -ne "\e[33m$*\e[0m"
}

# 将参数作为shell执行，执行之前先打印。输出到标准错误流，以避免被$()捕获
exeShell() {
    printGreen "$1\n$2" 1>&2
    local shell
    shell=$(echo -e "$1" | tr -d '\n')
    eval "$shell"
}

# 备份指定文件
backup() {
    local file_name
    file_name=$(basename "$1")

    local modification_time
    modification_time=$(stat -c %y "$1")

    local back_file_name
    back_file_name="${file_name%.*}#${modification_time:0:10}#${modification_time:11:5}.${file_name#*.}"

    mkdir -p "$backup_directory"
    exeShell "cp -r --preserve=timestamp $1 $backup_directory/$back_file_name"
}

# 备份所有文件
backupAll() {
    while [ $# != 0 ]; do
        backup "$1"
        shift
    done
}

moveAllFromNew() {
    local new_file
    while [ $# != 0 ]; do
        new_file=${new_directory}/$1
        if [ -e "$1" ]; then
            backup "$1"
        fi
        if [ -e "$new_file" ]; then
            exeShell "mv $new_file ./"
        fi
        shift
    done
}

# 查询监听在某一端口的程序pid
findPidListenedOnPort() {
    ss -lp sport eq "$1" |
        grep -Eo ',pid=[0-9]{1,7},' |
        grep -Eo '[0-9]+' |
        head -1
}

# 等待某一端口被监听，没有被监听的话，会一直等待下去
waitListenOnPort() {
    while [ ! "$(findPidListenedOnPort "$1")" ]; do
        printGreen .
        sleep 1s
    done
}

# 杀死指定进程
killProcess() {
    kill -15 "$1"
}

# 启动 SpringBoot 项目
startBoot() {
    exeShell "$start_shell_prefix$1$start_shell_suffix"
}

# 关闭 SpringBoot 项目
stopBoot() {
    local opid
    opid=$(findPidListenedOnPort "$1")
    if [ "$opid" ]; then
        printRed "等待 $opid 进程关闭。$1 端口\n"
        killProcess "$opid"
    else
        printRed "没有程序监听 $1 端口\n"
    fi
}

# 启动
start() {
    printGreen "项目启动中...\n"
    if [ ! "$use_systemd" ]; then
        startBoot "${ports[$1]}"
    else
        exeShell "$systemd_command start ${systemd_services[$1]}"
    fi
}

# 重启
restart() {
    local opid
    local index
    for ((index = 0; index < ${#ports[@]}; index++)); do
        opid=$(findPidListenedOnPort "${ports[$index]}")
        if [ "$opid" ]; then
            break
        fi
    done
    if [ ! "$opid" ]; then
        index=0
    fi
    if [ ! "$use_systemd" ]; then
        if [ "$opid" ]; then
            stopBoot "${ports[$index]}"
        fi
        startBoot "${ports[$index]}"
    else
        exeShell "$systemd_command restart ${systemd_services[$index]}"
    fi
}

# 关闭
stop() {
    if [ ! "$use_systemd" ]; then
        stopBoot "${ports[0]}"
        stopBoot "${ports[1]}"
    else
        exeShell "$systemd_command stop ${systemd_services[*]}"
    fi
}

# 查看状态
status() {
    local opid
    local checkedPort
    for port in "${ports[@]}"; do
        checkedPort=$port
        opid=$(findPidListenedOnPort "$port")
        if [ "$opid" ]; then
            break
        fi
    done
    if [ "$opid" ]; then
        printGreen "$opid 进程已经监听 $checkedPort 端口\n"
    else
        printGreen "项目没有启动\n"
    fi
}

# 部署时用到
deployer() {
    start "$1"
    printGreen "等待监听 ${ports[$1]} 端口\n"
    waitListenOnPort "${ports[$1]}"
    echo ""
    sleep "$deploy_sleep_time"
    stopBoot "${ports[$2]}"
}

# 部署后端
deployBackend() {
    backupAll "${backend_files[@]}"
    moveAllFromNew "${backend_files[@]}"

    local opid
    opid=$(findPidListenedOnPort "${ports[0]}")
    if [ "$opid" ]; then
        deployer 1 0
    else
        deployer 0 1
    fi
}

# 部署前端
deployFront() {
    backupAll "${front_files[@]}"
    moveAllFromNew "${front_files[@]}"
}

# 部署前后端
deploy() {
    printYellow "部署后端中\n"
    deployBackend
    printYellow "\n部署前端中\n"
    deployFront
}

# 打印帮助
printHelp() {
    cat <<EOF
boot-starter [deploy|restart|stop|status]

deployBackend   部署后端，使用两个端口交替
deployFront     部署前端
deploy          部署前后端
restart         重启后端，重启现已监听端口的项目。没有监听的话，启动第一个
stop            关闭所有项目
status          查看项目状态
EOF
}

# 判断选项
case "$1" in
"deployBackend")
    deployBackend
    ;;
"deployFront")
    deployFront
    ;;
"deploy")
    deploy
    ;;
"restart")
    restart
    ;;
"stop")
    stop
    ;;
"status")
    status
    ;;
*)
    printHelp
    ;;
esac
